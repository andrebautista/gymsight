<div class="row">
  <div class="medium-6 large-6 large-offset-6 columns gallery-nav-container">
    <section class="gallery-nav">
      <div class="gallery-nav-button">All Content / All Media Types</div>
      <nav class="filters">
        <ul class="tags filter-group" data-filter-group="tag">
          <h4 class="nav-header">Filter by tag</h4>
          <li data-filter="">All content</li>
          <li data-filter=".workouts">Workouts</li>
          <li data-filter=".nutrition">Nutrition</li>
          <li data-filter=".competitions">Competitions</li>
          <li data-filter=".field">In the field</li>
        </ul>
        <ul class="media-type filter-group" data-filter-group="type">
          <li class="nav-header" data-filter="">All media</h4>
          <li data-filter=".image">Images</li>
        </ul>
      </nav>
    </section>
  </div>
</div>
<div class="row">
  <div class="medium-12 large-12 columns">
    <div id="isotope-container" class="js-isotope" data-isotope-options='{ "itemSelector": ".item", "masonry": { "columnWidth": 220, "gutter": 20 } }'>
      <%= render template:"images/index" %>
    </div>
  </div>
</div>

