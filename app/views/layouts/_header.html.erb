<header class="<%= @header_image %>">
  <%= link_to image_tag("site_wide/gymsight_logo.png", alt: "Logo", id:"header-logo"), root_path, class:"#{'absolute' if current_page?(root_path)}" %>
  <div class="row <%= 'hidden' if current_page?(root_path)%>">
    <div class="centeredmenu">
    <ul>
      <li><%= link_to 'who we are', about_path, class:"#{'active' if current_page?(about_path)}" %></li>
      <li><%= link_to 'what we offer', offerings_path, class:"#{'active' if current_page?(offerings_path)} #{@offerings_header_active}"%></li>
      <li><%= link_to 'get started', contact_path, class:"#{'active' if current_page?(contact_path)} #{@gs_header_active}" %></li>
    </ul>
  </div>
</header>
