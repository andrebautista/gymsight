<footer class="interior-footer <%= 'hidden' if current_page?(root_path)%>">
  <div class="row">
    <div class="large-12 medium-12 small-12">
      <div class="large-2 large-offset-1 medium-2 medium-offset-1 hide-for-small-only columns">
        <%= link_to image_tag("site_wide/logo_footer.png", alt: "Logo", class:"footer-logo"), root_path %>
        <%= link_to '', 'javascript:void(0)', class: 'facebook social-link' %>
      <%= link_to '', 'javascript:void(0)', class: 'twitter social-link' %>
      </div>
      <div class="large-3 medium-3 small-12 columns">
        <ul>
          <li class="nav-heading"><%= link_to 'Who We Are', about_path, class:"#{@about_active}" %></li>
          <div class="hide-for-small-only">
            <li><%= link_to 'About Gymsight', "http://gymsight.herokuapp.com/about#about_us", class:"about_us" %></li>
            <li><%= link_to 'Trainer Bio', "http://gymsight.herokuapp.com/about#trainer_bio", class:"trainer_bio" %></li>
            <li><%= link_to 'Gallery', "http://gymsight.herokuapp.com/about#gallery", class:"gallery" %></li>
          </div>
        </ul>
      </div>
      <div class="large-3 medium-3 small-12 columns">
        <ul>
          <li class="nav-heading"><%= link_to 'What We Offer', offerings_path, class:"#{@offerings_active}" %></li>
          <div class="hide-for-small-only">
            <li><%= link_to 'Training Programs', offerings_path, class:"#{@program_active}" %></li>
            <li><%= link_to 'Frequently Asked Questions', faq_path, class:"#{@faq_active}" %></li>
          </div>
        </ul>
      </div>
      <div class="large-3 medium-3 small-12 columns" id="last-footer-nav">
        <ul>
          <li class="nav-heading"><%= link_to 'Get Started', contact_path, class:"#{@gs_active}" %></li>
          <div class="hide-for-small-only">
            <li></li>
            <li></li>
          </div>
        </ul>
      </div>
      <div class="show-for-small-only small-12 columns">
        <%= link_to image_tag("site_wide/logo_footer.png", alt: "Logo", class:"footer-logo"), root_path %>
        <%= link_to '', 'javascript:void(0)', class: 'facebook social-link' %>
      <%= link_to '', 'javascript:void(0)', class: 'twitter social-link' %>
      </div>
    </div>
  </div>
</footer>
