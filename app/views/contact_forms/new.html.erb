<% provide(:title, 'Contact') %>
<div class="row">
  <div class="small-12 large-12 medium-12 large-centered columns">
    <div class="banner-container who-we-are-banner">
    <div class="banner-text">Get<br/>Started</div>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-9 medium-9 columns">
    <dl class="tabs contact" data-tab data-options="deep_linking:true;scroll_to_content:false;">
      <dd class="active" id="consultation_request"><a href="#consultation_request">Request a Consultation</a></dd>
      <dd id="question"><a href="#question">Ask a Question</a></dd>
    </dl>
    <div class="tabs-content" id="contact-tabs-content">
      <div class="content active" id="consultation_request">
          <%= form_for @consultation, url:consultation_path do |form| %>
            <% flash.each do |key, value| %>
              <div class="row">
                <div class="small-12 large-12 medium-12 large-centered columns">
                  <div data-alert class="alert-box">
                      <%= value %>
                      <a href="#" class="close">&times;</a>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="row">
              <div class="large-12 columns">
                <h4 class="form-headline">Tell us about yourself</h4>
              </div>
            </div>
            <div class="row">
              <div class="large-5 medium-5 columns">
                <%= form.text_field :name, placeholder:"Name" %>
              </div>
              <div class="large-2 medium-2 small-3 columns">
                <%= form.text_field :age, maxlength: 2, placeholder:"Age" %>
              </div>
              <div class="large-5 medium-5 columns">
                <%= form.text_field :occupation, placeholder:"Occupation" %>
              </div>
            </div>
            <div class="row">
              <div class="large-5 medium-5 columns">
                <%= form.text_field :email_address, placeholder:"Email" %>
              </div>
              <div class="large-4 medium-4 columns">
                <%= form.text_field :phone_number, placeholder:"Phone Number" %>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <h4 class="form-headline">Which program are you interested in? <a class="form-link" href="http://gymsight.herokuapp.com/offerings"> programs</a></h4>
              </div>
            </div>
            <div class="row">
              <div class="large-5 medium-5 columns">
                <%= form.select(:training_program, options_for_select([['Personal Training'], ['Group Training'], ['General Athletic Program'], ['Rock & Ice Program'], ['Big Mountain Program']])) %>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <h4 class="form-headline">Notes</h4>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                  <%= form.text_area :notes, placeholder:"Enter text here" %>
              </div>
            </div>
            <div class="actions">
              <%= form.submit "Submit", class:"contact-button" %>
            </div>
          <% end %>
      </div>
      <div class="content" id="question">
        <%= form_for @question, url: question_path do |form| %>
          <div class="row">
            <div class="large-12 columns">
              <h4 class="form-headline" id="question-reminder">Before asking a question, please check <a href="http://gymsight.herokuapp.com/frequently-asked-questions" class="form-link"> frequently asked questions</a></h4>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <h4 class="form-headline">Important contact details</h4>
            </div>
          </div>
          <div class="row">
            <div class="large-5 medium-5 columns">
              <%= form.text_field :name, placeholder:"Name" %>
            </div>
            <div class="large-5 medium-5 columns">
              <%= form.text_field :email_address, placeholder:"Email" %>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <h4 class="form-headline">Does your question relate to a specific program?<a href="http://gymsight.herokuapp.com/frequently-asked-questions" class="form-link"> program</a></h4>
            </div>
          </div>
          <div class="row">
            <div class="large-5 medium-5 columns">
              <%= form.select(:training_program, options_for_select([['No Program Selected'],['Personal Training'], ['Group Training'], ['General Athletic Program'], ['Rock & Ice Program'], ['Big Mountain Program']])) %>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <h4 class="form-headline">Please type your question below. We'll respond to you as soon as possible.</h4>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
                <%= form.text_area :question, placeholder:"Enter text here" %>
            </div>
          </div>
          <div class="actions">
            <%= form.submit "Submit", class:"contact-button" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <div class="small-12 large-3 medium-3 columns">
    <aside class="contact-container">
      <h3>Location & Contact Info</h3>
      <div class="contact-caption">Gymsight is located in the heart of Eastlake</div>
      <div class="contact-details">(206) 191-1919</div>
      <div class="contact-details">Address</div>
      <a class="contact-button" id="map-button" href="http://google.com/maps" target="_blank">View Map</a>
    </aside>
  </div>
</div>


